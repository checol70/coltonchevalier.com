{
  "name": "coltonchevalier.com",
  "version": "1.0.0",
  "description": "Colton's Portfolio",
  "main": "server.js",
  "repository": "https://github.com/checol70/fuzzy-guacamole.git",
  "author": "Colton Chevalier",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "node": "^14.4.0"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0"
  }
}
